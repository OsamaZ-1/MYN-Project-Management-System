generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id        Int       @id @default(autoincrement())
  name      String
  role      String?
  events    Event[]   @relation("EventEmployees")
  createdAt DateTime  @default(now())
}

model Client {
  id        Int       @id @default(autoincrement())
  name      String
  contact   String?
  email     String?
  events    Event[]
  invoices  Invoice[]
  createdAt DateTime  @default(now())
}

model Event {
  id             Int          @id @default(autoincrement())
  title          String
  description    String?
  start          DateTime
  end            DateTime
  duration       Int?
  client         Client       @relation(fields: [clientId], references: [id])
  clientId       Int
  employees      Employee[]   @relation("EventEmployees")

  // ───── Recurrence-related fields ─────
  isRecurring    Boolean      @default(false)
  rrule          Json?        // stores rrule options (freq, interval, byweekday, etc.)
  exdate         DateTime[]   // list of specific dates to skip (exceptions)

  // ───── Exception (edited occurrence) handling ─────
  parentEvent    Event?       @relation("EventExceptions", fields: [parentEventId], references: [id])
  parentEventId  Int?         // links an exception to its recurring parent
  exceptions     Event[]      @relation("EventExceptions") // reverse relation: parent → exceptions

  // ───── Metadata ─────
  color          String?      // for frontend display
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Invoice {
  id         Int      @id @default(autoincrement())
  number     String   @unique
  client     Client   @relation(fields: [clientId], references: [id])
  clientId   Int
  amount     Float
  issuedAt   DateTime @default(now())
  dueAt      DateTime?
  paid       Boolean  @default(false)
}
